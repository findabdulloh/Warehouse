<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Warehouse</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)

    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: "Segoe UI", "Roboto", "Helvetica Neue", sans-serif;
        }

        .wrapper {
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        .sidebar {
            width: 250px;
            background-color: #e9ecef;
            padding: 2rem 1rem;
            display: flex;
            flex-direction: column;
        }

            .sidebar h5 {
                font-weight: 600;
                color: #343a40;
                margin-bottom: 2rem;
            }

            .sidebar .nav-link {
                color: #495057;
                font-weight: 500;
                padding: 0.5rem 1rem;
                border-radius: 0.375rem;
                transition: background-color 0.2s, color 0.2s;
            }

                .sidebar .nav-link:hover {
                    background-color: #dfe3e6;
                    color: #0d6efd;
                }

        .nav-section-title {
            color: #6c757d;
            font-size: 0.85rem;
            text-transform: uppercase;
            margin-top: 1.5rem;
            margin-bottom: 0.5rem;
        }

        .main {
            flex: 1;
            padding: 2rem;
            overflow-y: auto;
        }

        .main-content {
            background-color: #ffffff;
            border-radius: 0.5rem;
            padding: 2rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav class="sidebar">
            <h5><a class="nav-link" asp-page="/Index">Управление складом</a></h5>

            <div class="nav-section-title">Склад</div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-page="/InputDocuments/Index">Поступления</a>
                </li>
            </ul>

            <div class="nav-section-title">Справочники</div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-page="/MeasurementUnits/Index">Единицы измерения</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Resources/Index">Ресурсы</a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <main class="main">
            <div class="main-content">
                @RenderBody()
                @RenderSection("Scripts", required: false)
            </div>
        </main>
    </div>
</body>
</html>
