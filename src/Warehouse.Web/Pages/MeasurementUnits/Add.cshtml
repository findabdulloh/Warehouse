@page
@model AddMeasurementUnitModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Добавить единицу измерения";
}

<div class="container py-5">
    <div class="rounded-4 shadow-sm p-5 bg-white border border-light-subtle mx-auto" style="max-width: 600px;">
        <h2 class="fs-3 fw-semibold text-dark mb-4">Добавить единицу измерения</h2>

        <form method="post" novalidate>
            <div class="mb-4">
                <label for="Name" class="form-label fw-medium">Наименование</label>
                <input asp-for="Name" class="form-control shadow-sm" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-dark">Сохранить</button>
                <a asp-page="Index" class="btn btn-outline-secondary">Назад</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@section Styles {
    <style>
        body {
            background-color: #f3f4f6;
            font-family: 'Inter', 'Segoe UI', sans-serif;
        }

        .btn {
            border-radius: 8px;
            padding: 8px 16px;
            font-weight: 500;
            transition: all 0.2s ease-in-out;
        }

        .btn-dark {
            background-color: #111827;
            border: none;
            color: #fff;
        }

            .btn-dark:hover {
                background-color: #1f2937;
            }

        .btn-outline-secondary {
            border: 1px solid #9ca3af;
            color: #6b7280;
            background-color: transparent;
        }

            .btn-outline-secondary:hover {
                background-color: #9ca3af;
                color: white;
            }

        .form-control {
            border-radius: 8px;
            border: 1px solid #d1d5db;
        }

        label {
            font-size: 15px;
        }

        h2 {
            letter-spacing: -0.5px;
        }
    </style>
}