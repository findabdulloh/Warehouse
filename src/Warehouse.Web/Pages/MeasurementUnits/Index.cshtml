@page
@model MeasurementUnitsIndexModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Единицы измерения";
}

<div class="container py-5">
    <div class="rounded-4 shadow-sm p-5 bg-white border border-light-subtle">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fs-3 fw-semibold text-dark m-0">Единицы измерения</h2>
            <div class="d-flex gap-2">
                @if (!Model.IsActive)
                {
                    <a class="btn btn-outline-dark" asp-page="Index" asp-route-isActive="true">К рабочим</a>
                }
                else
                {
                    <a class="btn btn-dark" asp-page="Add">Добавить</a>
                    <a class="btn btn-outline-secondary" asp-page="Index" asp-route-isActive="false">К архиву</a>
                }
            </div>
        </div>

        <div class="list-group">
            @foreach (var resource in Model.Resources)
            {
                <div class="resource-card mb-3 px-4 py-3"
                     onclick="location.href='@Url.Page("Edit", new { id = resource.Id })'"
                     style="cursor: pointer;">
                    <span>@resource.Name</span>
                </div>
            }
        </div>

    </div>
</div>

@section Styles {
    <style>
        body {
            background-color: #f3f4f6;
            font-family: 'Inter', 'Segoe UI', sans-serif;
        }

        .btn {
            border-radius: 8px;
            padding: 8px 16px;
            font-weight: 500;
            transition: all 0.2s ease-in-out;
        }

        .btn-dark {
            background-color: #111827;
            border: none;
            color: #fff;
        }

            .btn-dark:hover {
                background-color: #1f2937;
            }

        .btn-outline-dark {
            border: 1px solid #111827;
            color: #111827;
            background-color: transparent;
        }

            .btn-outline-dark:hover {
                background-color: #111827;
                color: white;
            }

        .btn-outline-secondary {
            border: 1px solid #9ca3af;
            color: #6b7280;
            background-color: transparent;
        }

            .btn-outline-secondary:hover {
                background-color: #9ca3af;
                color: white;
            }

        .list-group-item {
            border-bottom: 1px solid #e5e7eb;
            font-size: 15px;
            background-color: transparent;
        }

            .list-group-item:last-child {
                border-bottom: none;
            }

        .list-item-hover:hover {
            background-color: #f9fafb;
            transition: background-color 0.2s ease-in-out;
        }

        .resource-card {
            background-color: #fff;
            border: 1px solid #e5e7eb;
            border-radius: 10px;
            transition: all 0.2s ease-in-out;
            box-shadow: 0 1px 2px rgba(0, 0, 0, 0.03);
        }

            .resource-card:hover {
                background-color: #f9fafb;
                transform: scale(1.01);
            }
    </style>
}