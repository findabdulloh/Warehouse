@page
@model EditModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Редактировать ресурс";
}

<div class="container py-5">
    <div class="rounded-4 shadow-sm p-5 bg-white border border-light-subtle mx-auto" style="max-width: 600px;">
        <h2 class="fs-3 fw-semibold text-dark mb-4">Редактировать ресурс</h2>

        <form method="post" novalidate>
            <input type="hidden" asp-for="Resource.Id" />

            <div class="mb-4">
                <label asp-for="Resource.Name" class="form-label fw-medium">Наименование</label>
                <input asp-for="Resource.Name" class="form-control shadow-sm" />
                <span asp-validation-for="Resource.Name" class="text-danger small"></span>
            </div>

            <div class="d-flex flex-wrap gap-2">
                <button type="submit" formaction="?handler=Save" class="btn btn-dark">Сохранить</button>

                @if (Model.Resource.Status == 0)
                {
                    <button type="submit" formaction="?handler=Archive" class="btn btn-outline-warning">В архив</button>
                }
                else if (Model.Resource.Status == 1)
                {
                    <button type="submit" formaction="?handler=Activate" class="btn btn-outline-success">В работу</button>
                }

                <button type="submit" formaction="?handler=Delete" class="btn btn-outline-danger"
                        onclick="return confirm('Вы уверены, что хотите удалить?');">
                    Удалить
                </button>

                <a asp-page="Index" class="btn btn-outline-secondary">Назад</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@section Styles {
    <style>
        body {
            background-color: #f3f4f6;
            font-family: 'Inter', 'Segoe UI', sans-serif;
        }

        .btn {
            border-radius: 8px;
            padding: 8px 16px;
            font-weight: 500;
            transition: all 0.2s ease-in-out;
        }

        .btn-dark {
            background-color: #111827;
            border: none;
            color: #fff;
        }

            .btn-dark:hover {
                background-color: #1f2937;
            }

        .btn-outline-warning {
            border: 1px solid #f59e0b;
            color: #b45309;
            background-color: transparent;
        }

            .btn-outline-warning:hover {
                background-color: #f59e0b;
                color: white;
            }

        .btn-outline-success {
            border: 1px solid #10b981;
            color: #047857;
            background-color: transparent;
        }

            .btn-outline-success:hover {
                background-color: #10b981;
                color: white;
            }

        .btn-outline-danger {
            border: 1px solid #ef4444;
            color: #b91c1c;
            background-color: transparent;
        }

            .btn-outline-danger:hover {
                background-color: #ef4444;
                color: white;
            }

        .btn-outline-secondary {
            border: 1px solid #9ca3af;
            color: #6b7280;
            background-color: transparent;
        }

            .btn-outline-secondary:hover {
                background-color: #9ca3af;
                color: white;
            }

        .form-control {
            border-radius: 8px;
            border: 1px solid #d1d5db;
        }

        label {
            font-size: 15px;
        }

        h2 {
            letter-spacing: -0.5px;
        }
    </style>
}